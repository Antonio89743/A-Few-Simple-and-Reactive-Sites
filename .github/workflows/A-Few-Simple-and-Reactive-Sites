name: Deploy multiple sites to GitHub Pages

on:
  push:
    branches: [main]  # adjust if your default branch is 'master'

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Prepare output folder
        run: |
          mkdir output
          cp -r First-HTML-CSS-Task output/First-HTML-CSS-Task
          cp -r Responsive-design-1 output/Responsive-design-1
          cp -r Responsive-design-2 output/Responsive-design-2

      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./output
          publish_branch: gh-pages
