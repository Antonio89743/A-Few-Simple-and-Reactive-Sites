name: Deploy multiple sites to GitHub Pages
on: push:
  branches: [main]

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Prepare output
        run: |
          mkdir output
          cp -r "First-HTML-CSS-Task" output/
          cp -r "Responsive-design-1" output/
          cp -r "Responsive-design-2" output/

      - uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./output
          publish_branch: gh-pages
